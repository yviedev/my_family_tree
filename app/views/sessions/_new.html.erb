<div id="session-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <h1>Login</h1>
      <%= form_tag '/login', class: "form-inline", method: :post do %>
      <div class="modal-body">
        <div>
          <%= label_tag :email %>
          <%= text_field_tag :email, "", class: "form-control form-width" %>
        </div>
        <div>
          <%= label_tag :password %>
          <%= password_field_tag :password, "", class: "form-control form-width" %>
        </div>
        <%= submit_tag "Submit", class: "btn btn-outline-primary" %><br>

        <%= link_to "I need to create an account.", "/signup" %><br>

      <% end %>
    </div>
  </div>
</div>