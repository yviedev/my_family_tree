<h1><% if @user.images != [] %>
  <img src="<%= @user.images.first.url %>">
<% end %><%= @user.full_name %></h1>
<h3>Relationship: <%= @relationship %>
<h3>Birthday: <%= @user.month_date(@user.birthday) %></h3>
<h3>Anniversary: <%= @user.month_date(@user.anniversary) %></h3>
<br>

<section id="portfolio" class="bgSection portfolio-section">
  <div class="container">
      <div class="row">
        <!-- Section Header -->
        <div class="col-md-12 col-sm-12 col-xs-12 section-header wow fadeInDown">
            <h2><span class="highlight-text"><%= @user.first_name %>'s Gallery</span></h2>
            
            <p class="col-md-8 col-sm-10 col-xs-12 col-md-offset-2 col-sm-offset-1">Click the images below to go through <%= @user.first_name %>'s gallery.</p>
        </div>
        <!-- Section Header End -->
      </div>
  </div>
  <!-- Works -->
  <div class="portfolio-works wow fadeIn" data-wow-duration="2s">
    <div class="portfolio-items">
    <% @user.images.each do |image| %>
      <!-- Portfolio Items -->
      <div class="item portfolio-item">
        <img src="<%= image.url %>" alt="">
        <div class="portfolio-details-wrapper">
            <div class="portfolio-details">
                <div class="portfolio-meta-btn">
                    <ul class="work-meta">
                        <li class="lighbox"><a href="<%= image.url%>" class="featured-work-img"><i class="fa fa-search-plus"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
      </div>
      <!-- Portfolio Items End -->
      <% end %>
    </div>
  </div>
  <!-- Works End -->
</section>
<!-- Portfolio Section End -->

<% if current_user #|| current_user.admin %>
  <% if @relationship != "Not available"%>
    <br><%= link_to "Edit relationship", "/relationships/#{@relationship_id}/edit" %><br>
  <% else %>
    <%= form_tag '/relationships', method: :post do %>
    <%= select_tag :relative_type_id, options_for_select(@relative_type_id.collect{ |r| [r.name, r.id] })%>
    <%= hidden_field_tag :user_id, @user.id%>
    <%= submit_tag 'Add relationship' %>
    <% end %><br>
  <% end %>
  <%= link_to "Edit member", "/familymembers/#{@user.id}/edit" %><br>
  <%= link_to "Delete member", "/familymembers/#{@user.id}", :method => :delete, :confirm => "Are you sure ?"%><br>
<% end %>

<%= link_to "Back to All Family Members", "/" %>