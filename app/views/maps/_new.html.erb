<div id="map-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
    <br>
    <h1>Add Your Location</h1>
      <%= form_tag "/maps", class: "form-control newsfeed-center", method: :post do  %>
      <div class="modal-body">
      <%= label_tag "Location:" %>
      <%= text_field_tag :location, "Enter new location", class: "form-control form-width" %><br>
      <%= label_tag "#{current_user.first_name}" %>
      <%= text_field_tag :description, "is..", class: "form-control form-width" %><br>
      <%= submit_tag "Add my location", class: "btn btn-outline-primary modal-button"  %>
      <% end %>
      <br>
    </div>
  </div>
</div>