<div id="image-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <h1 class="section-header">Add your image below:</h2>

      <%= form_tag "/images", class: "newsfeed-center form-inline", method: :post do  %>
        <div class="modal-body">

        <div>
          <%= label_tag "Image url" %>
          <%= text_field_tag :url, "Enter image url:", class: "form-control form-width" %>
        </div>
        <div>
        <%= hidden_field_tag :user_id, @user.id%>
        </div>
        
        <%= submit_tag "Submit", class: "btn btn-outline-primary" %><br>

      <% end %>
    </div>
  </div>
</div>