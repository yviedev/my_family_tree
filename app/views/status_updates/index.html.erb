<%= form_tag "/newsfeed", method: :post do  %>

  <div>
    <%= label_tag :post %>
    <%= text_field_tag :post %>
  </div>
  <div>
    <%= label_tag :url %>
    <%= text_field_tag :url %>
  </div>
  <div>
    <%= hidden_field_tag :user_id, @current_user.id %>
  </div>
  
<%= submit_tag "Update Status" %><br>

<%= link_to "Cancel", "/familymembers/#{current_user.id}" %><br>

<% end %>

<% @messages.each do |message| %>
<div class="message">Posted by: <%= User.find(message.user_id).first_name %> on <%= message.month_date_year_time(message.updated_at) %>
<p><img src="<%= message.url %>"></p>
<p><%= message.post %></p>
</div>
<% end %>