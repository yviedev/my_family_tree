<header>
<!-- Navigation Menu start-->
<div class="container">
<nav class="navbar navbar-toggleable-lg navbar-light bg-faded">
<div class="container-fluid">
  <a href="/"><img class="logo-main" src="/images/logo.png"></a>
</div>
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav">
      <% if current_user %>
        <% if current_page? ("/newsfeed")%>
          <li class="nav-item active">
        <% else %>
          <li class="nav-item">
        <% end %>
        <a class="nav-link" href="/newsfeed">Newsfeed</a>
      </li>
      <li class="nav-item dropdown">
        <% if current_page? ("/familymembers") %>
        <a class="nav-link dropdown-toggle active" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          My Family
        </a>
        <% elsif current_page? ("/tree") %>
        <a class="nav-link dropdown-toggle active" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          My Family
        </a>
        <% elsif current_page? ("/maps") %>
        <a class="nav-link dropdown-toggle active" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          My Family
        </a>
        <% else %>
        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          My Family
        </a>
        <% end %>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <a class="dropdown-item" href="/familymembers">View All Family Members</a>
          <%= link_to "Add Family Member", "/familymembers/new", remote: true, class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/tree">My Family Tree</a>
          <a class="dropdown-item" href="/maps">My Family Map</a>
        </div>
      </li>
      <li class="nav-item dropdown">
      <%if current_page? ("/familymembers/#{current_user.id}") %>
        <a class="nav-link dropdown-toggle active" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
         Hi <%= current_user.first_name %>!
        </a>
      <% else %>
        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
         Hi <%= current_user.first_name %>!
        </a>
      <% end %>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <a class="dropdown-item" href="/familymembers/<%= current_user.id %>">View My Page</a>
          
        </div>
      </li>
      <%= form_tag '/familymembers', method: :get, class: "form-inline my-2 my-lg-0" do %>
      <%= text_field_tag :search_content, '', class: "form-control mr-sm-2", placeholder: "Enter name" %>
      <%= submit_tag 'Search', class: "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>
      <% end %>
      <li class="nav-item">
      <% if current_user %>
        <a class="nav-link" href="/logout">Logout</a>
      <% else %>
      <%= link_to "Login", "/login", remote: true, class: "nav-link" %>
      <% end %>
      </li>
    </ul>
  </div>
</nav>
</div>
</header>

